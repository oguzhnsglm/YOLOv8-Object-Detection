{
  "name": "thermal-defense-detection",
  "version": "1.0.0",
  "description": "Advanced Thermal Object Detection System for Defense Applications",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "thermal",
    "detection",
    "yolo",
    "defense",
    "surveillance"
  ],
  "author": "Defense Systems",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^5.12.2",
    "sharp": "^0.34.3",
    "socket.io": "^4.7.4"
  },
  "build": {
    "appId": "com.defense.thermal-detection",
    "productName": "Thermal Defense Detection System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}
